<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#e8f5fd"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/headerFood"
        android:layout_width="match_parent"
        android:scaleX="1.43"
        android:layout_marginTop="-6dp"
        android:layout_height="181dp"
        android:src="@drawable/diet_img" />

    <TextView
        android:id="@+id/mealHeading1"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="Meal 1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="27sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mealHeaderName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="36dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/periodHeaderName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="96dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0084B4"
        android:backgroundTint="#0084bf" />

    <TextView
        android:id="@+id/mealHeading2"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Meal 2"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="27sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mealHeaderName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="36dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/periodHeaderName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="96dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0084B4"
        android:backgroundTint="#0084bf" />

    <TextView
        android:id="@+id/mealHeading3"
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Meal 3"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="27sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mealHeaderName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:layout_marginStart="36dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/periodHeaderName3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginStart="96dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp" />

    </LinearLayout>


</LinearLayout>
