<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8f5fd"
    tools:context=".TrainerDetailActivity">

    <include
        layout="@layout/layout"
        android:layout_width="411dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView_Food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="0dp"
        android:text="Add 3 meals per day for user"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#08a0e9"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/mealName1"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="26dp"
        android:text="Meal 1"
        android:textAlignment="viewStart"
        android:textColor="#08a0e9"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/ML1_dropDown1"
        android:backgroundTint="#08a0e9"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="190dp"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/ML1_dropDown2"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="278dp"
        android:layout_marginTop="191dp"
        android:backgroundTint="#08a0e9"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/mealName2"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="26dp"
        android:text="Meal 2"
        android:textAlignment="viewStart"
        android:textColor="#08a0e9"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/ML2_dropDown2"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="279dp"
        android:layout_marginTop="326dp"
        android:backgroundTint="#08a0e9"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/ML2_dropDown1"
        android:backgroundTint="#08a0e9"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="326dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/mealName3"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="423dp"
        android:layout_marginEnd="26dp"
        android:text="Meal 3"
        android:textAlignment="viewStart"
        android:textColor="#08a0e9"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/ML3_dropDown1"
        android:backgroundTint="#08a0e9"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="469dp"
        android:textAlignment="center" />

    <Spinner
        android:id="@+id/ML3_dropDown2"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="280dp"
        android:layout_marginTop="469dp"
        android:backgroundTint="#08a0e9"
        android:textAlignment="center" />

    <Button
        android:id="@+id/addMLBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="75dp"
        android:background="#0084b4"
        android:text="Add"
        android:textColor="#FFFFFF" />

</RelativeLayout>